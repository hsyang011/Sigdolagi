<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.edu.springboot.community.CommentMapper">

  <!-- tb_comment 테이블 전체 컬럼 -->
    <sql id="commentColumns">
          comment_id
        , freeboard_idx
        , content
        , nickname
        , REPLYDATE
        , modified_date
    </sql>
    
    <!-- 댓글 저장 -->
    <insert id="save" parameterType="com.edu.springboot.community.CommentDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_comment (
            <include refid="commentColumns" />
        ) VALUES (
              #{comment_id}
            , #{freeboard_idx}
            , #{content}
            , #{nickname}
            , NOW()
            , NULL
        )
    </insert>


    <!-- 댓글 상세정보 조회 -->
    <select id="findById" parameterType="com.edu.springboot.community.CommentDTO" resultType="com.edu.springboot.community.CommentDTO">
        SELECT
            <include refid="commentColumns" />
        FROM
            tb_comment
        WHERE
            comment_id = #{value}
    </select>


    <!-- 댓글 수정 -->
    <update id="update" parameterType="com.edu.springboot.community.CommentDTO">
        UPDATE tb_comment
        SET
              modified_date = NOW()
            , content = #{content}
            , nickname = #{nickname}
        WHERE
            comment_id = #{comment_id}
    </update>


	<delete id="deleteById">
		DELETE FROM tb_comment WHERE comment_id=#{comment_id}
	</delete>
		


    <!-- 댓글 리스트 조회 -->
    <select id="findAll" parameterType="com.edu.springboot.community.CommentDTO" resultType="int">
        SELECT
            COUNT(*)
        FROM
            tb_comment
        WHERE
           freeboard_idx = #{value}
        ORDER BY
            comment_id DESC
    </select>

</mapper>